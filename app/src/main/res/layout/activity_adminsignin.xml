<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ranjan.projecttracker.adminsignin">
    <EditText
        android:id="@+id/editTextadmin_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:hint="enter adminid"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextadmin_id"
        android:layout_alignStart="@+id/editTextadmin_id"
        android:layout_below="@+id/editTextadmin_id"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="71dp"
        android:id="@+id/editTextPassword"
        android:hint="enter password"
        android:ems="10"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:onClick="button_login_click"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:text="login" />

</RelativeLayout>
